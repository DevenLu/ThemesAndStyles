<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.moshdev.themessample"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".IntroActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".style_vs_theme.StyleVsTheme1Activity">
    </activity>
    <activity
      android:name=".style_vs_theme.StyleVsTheme2Activity"
      android:theme="@style/AppTheme.StyleVsTheme">
    </activity>
    <activity
      android:name=".attributes.AttributesActivity"
      android:label="@string/title_activity_attributes"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>