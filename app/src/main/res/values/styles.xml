<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="my_favorite_color">#d02b2b70</item>

    <item name="company_logo">@mipmap/ic_launcher</item>
    <item name="company_color">#4085d4</item>

  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="style_vs_theme_body_text">
    <item name="android:background">#3F00</item>
    <item name="android:padding">8dp</item>
    <item name="android:shadowColor">#F00</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">5</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textColor">#000</item>
  </style>


  <style name="AppTheme.StyleVsTheme">
    <item name="android:background">#3F00</item>
    <item name="android:padding">8dp</item>
    <item name="android:shadowColor">#F00</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">5</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textColor">#000</item>
  </style>

  <style name="MyButtonStyle" parent="@style/Widget.AppCompat.Button">
    <item name="android:textColor">@color/red</item>
  </style>


  <style name="MaterialTheme" parent="Theme.AppCompat.Light">

    <item name="colorPrimary">#8B1E3F</item>
    <item name="colorPrimaryDark">#5c142a</item>
    <item name="colorAccent">#3C153B</item>

    <!--CheckBox, RadioButton, (SeekBar, ProgressBar with alpha)  & Inactive EditText underline-->
    <item name="android:colorControlNormal">#89BD9E</item>

    <!--Activating/Enabling Ripple Effect-->
    <item name="android:colorControlHighlight">#F0C987</item>

    <!--Used with Active -> SeekBars, ProgressBars, Switches, Checkboxes and RadioButtons & Active EditText underline-->
    <item name="android:colorControlActivated">#006665</item>

    <!--Used with Buttons-->
    <item name="android:colorButtonNormal">#EB7BC0</item>

    <!--Used with Buttons & EditText text & Toolbar title-->
    <item name="android:textColorPrimary">#04dc00</item>

    <!--TextAppearance Medium-->
    <item name="android:textColorSecondary">#00f</item>

    <!--CompoundButton text-->
    <item name="android:textColorPrimaryDisableOnly">#F00</item>

    <!--Normal and TextAppearance Small TextView-->
    <item name="android:textColorTertiary">#FF934F</item>

    <!--EditText Hint text color-->
    <item name="android:textColorHint">#6f00ff</item>


    <item name="android:windowBackground">@color/windowBackground</item>

    <!--Defaults-->
    <!--<item name="colorControlNormal">?android:attr/textColorSecondary</item>-->
    <!--<item name="colorControlActivated">?attr/colorAccent</item>-->
    <!--<item name="colorControlHighlight">@color/ripple_material_light</item>-->
    <!--<item name="colorButtonNormal">@color/button_material_light</item>-->
  </style>

</resources>
